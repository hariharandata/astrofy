---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="AsyncTaskFlow"
    img="/project_img/ml_k8s_fastapi.png"
    desc="Scalable containerized async task processing platform using FastAPI, Celery, RabbitMQ, and PostgreSQL, fully containerized with Docker Compose."
    url="https://github.com/hariharandata/message_queue"
    badge="Distributed Systems"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="NoSQL Distributed Messaging System"
    desc="Developed a scalable producer-consumer architecture enabling reliable data ingestion and storage, with support for both MongoDB Atlas and local MongoDB setups."
    url="https://github.com/hariharandata/mongo_db_project"
    badge="Data Engineering"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="ML-K8s-FastAPI"
    desc="Developed and containerized a Scikit-learn based Iris flower classification API using FastAPI, designed for Kubernetes deployment"
    url="https://github.com/hariharandata/ML-K8s-Fastapi"
    badge="Machine Learning"
  />



